<Window x:Class="ZoomTPK.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:esri="http://schemas.esri.com/arcgis/runtime/2013"
		Title="MainWindow" 
		Height="750" 
		Width="925">
    <Grid>
		<esri:MapView x:Name="MyMapView"
					  LayerLoaded="MyMapView_LayerLoaded">
			<esri:Map>
				<!--<esri:ArcGISTiledMapServiceLayer ID="Basemap"
					ServiceUri="http://services.arcgisonline.com/ArcGIS/rest/services/World_Topo_Map/MapServer"/>-->
			</esri:Map>
		</esri:MapView>

        <!--Zoom in and out buttons-->
        <Button x:Name="zoomInButton" Content="Zoom In" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="zoomInButton_Click"/>
        <Button x:Name="zoomOutButton" Content="Zoom Out" HorizontalAlignment="Left" Margin="10,37,0,0" VerticalAlignment="Top" Width="75" Click="zoomOutButton_Click"/>
        <!-- ********************* -->


        
        
    </Grid>
</Window>
